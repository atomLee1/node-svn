    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Node",
            "program": "${workspaceFolder}\\scripts\\debugger.js",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "type": "cppvsdbg",
            "name": "Attach Native",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ],
    "compounds": [
        {
            "name": "Both Node and Native",
            "configurations": [
                "Debug Node",
                "Attach Native"
            ]
        }
    ]
}
