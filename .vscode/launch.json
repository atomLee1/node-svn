{
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debugger Script",
            "program": "${workspaceFolder}\\scripts\\debugger.js",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "cppvsdbg",
            "request": "launch",
            "name": "Mocha Tests Native",
            "program": "node",
            "args": [
                "--expose-gc",
                "${workspaceFolder}/node_modules/mocha/bin/_mocha",
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/test"
            ],
            "cwd": "${workspaceRoot}",
            "externalConsole": true,
            "internalConsoleOptions": "openOnSessionStart",
            "preLaunchTask": "node-gyp",
            "sourceFileMap": {
                "c:/ws/deps/": "C:/Users/Simon/.node-gyp/9.8.0/deps/"
            },
            "symbolSearchPath": "C:/Users/Simon/AppData/Local/Temp/SymbolCache;C:/Users/Simon/.node-gyp/9.8.0/x64",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/test"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        }
    ],
    "version": "0.2.0"
}
